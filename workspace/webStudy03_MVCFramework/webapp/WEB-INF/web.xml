<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  
	<display-name>webStudy03_MVCFramework</display-name>
	<welcome-file-list>
	  <welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<context-param>
		<param-name>contextParameter</param-name>
		<param-value>param value</param-value>
	</context-param>
	 
	 <filter>
	 	<filter-name>CharacterEncodingFilter</filter-name>
	 	<filter-class>kr.or.ddit.mvc.CharacterEncodingFilter</filter-class>
	 	<init-param>
	 		<param-name>encoding</param-name>
	 		<param-value>UTF-8</param-value>
	 	</init-param>
	 </filter>
	 <filter-mapping>
	 	<filter-name>CharacterEncodingFilter</filter-name>
	 	<url-pattern>/*</url-pattern>
	 </filter-mapping>
	 
	 <filter>
	 	<filter-name>AuthenticationFilter</filter-name>
	 	<filter-class>kr.or.ddit.mvc.auth.AuthenticationFilter</filter-class>
	 	<init-param>
	 		<param-name>resourcePath</param-name>
	 		<param-value>/kr/or/ddit/SecuredResources.properties</param-value>
	 	</init-param>
	 </filter>
	 <filter-mapping>
	 	<filter-name>AuthenticationFilter</filter-name>
	 	<url-pattern>/*</url-pattern>
	 </filter-mapping>
	 
	 <filter>
	 	<filter-name>AuthorizationFilter</filter-name>
	 	<filter-class>kr.or.ddit.mvc.auth.AuthorizationFilter</filter-class>
	 </filter>
	 <filter-mapping>
	 	<filter-name>AuthorizationFilter</filter-name>
	 	<url-pattern>/*</url-pattern>
	 </filter-mapping>
	 
	 <filter>
	 	<filter-name>FirstFilter</filter-name>
	 	<filter-class>kr.or.ddit.filter.FirstFilter</filter-class>
	 </filter>
	 <filter-mapping>
	 	<filter-name>FirstFilter</filter-name>
	 	<url-pattern>/*</url-pattern>
	 </filter-mapping>
	 
	<filter>
		<filter-name>MultipartFilter</filter-name>
		<filter-class>kr.or.ddit.mvc.fileupload.MultipartFilter</filter-class>
	</filter>  
	<filter-mapping>
		<filter-name>MultipartFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	 <session-config>
	 	<session-timeout>10</session-timeout>
	 </session-config>
	 
	 <servlet>
	 	<servlet-name>FrontController</servlet-name>
	 	<servlet-class>kr.or.ddit.mvc.FrontController</servlet-class>
	 	<init-param>
	 		<param-name>basePackages</param-name>
	 		<param-value>kr.or.ddit</param-value>
	 	</init-param>  	
	 	<init-param>
	 		<param-name>prefix</param-name>
	 		<param-value>/WEB-INF/views/</param-value>
	 	</init-param>
	 	<init-param>
	 		<param-name>suffix</param-name>
	 		<param-value>.jsp</param-value>
	 	</init-param>
	 	<load-on-startup>1</load-on-startup>
	 	<multipart-config>
	 		<location>d:/uploadTemp</location>
	 		<file-size-threshold>10</file-size-threshold>
	 	</multipart-config>
	 </servlet>
	 <servlet-mapping>
	 	<servlet-name>FrontController</servlet-name>
	 	<url-pattern>*.do</url-pattern>
	 </servlet-mapping>
	 
	 <servlet>
	 	<servlet-name>FileUploadServletVersion2</servlet-name>
	 	<servlet-class>kr.or.ddit.servlet10.FileUploadServletVersion2</servlet-class>
	 </servlet>
	 <servlet-mapping>
	 	<servlet-name>FileUploadServletVersion2</servlet-name>
	 	<url-pattern>/12/fileUpload_2.do</url-pattern>
	 </servlet-mapping>
  
</web-app>























